#include <stdio.h>

int main() 
   int x1=2.0;
   int x2=4.0;
   int k;
   int xn;
   int xnm1=x2;
   int n=2.0;
   printf("%d\n", x1);
   printf("%d\n", x2);
   k=x2/x1;
   
   while(n<9.0){
   xn=k*xnm1;
   printf("%d\n", xn);
   n++;
   xnm1=xn;
   }
   printf("Sum of geometric series is %d\n, /*equation*/);
   return 0;
}
 
