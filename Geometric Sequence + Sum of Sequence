#include <stdio.h>

int main() 
   int x1=2.0;
   int x2=4.0;
   int k;
   int xn;
   int xnm1=x2;
   int n=2.0;
   int totalSum
   
   printf("%d\n", x1);
   printf("%d\n", x2);
   k=x2/x1;
   
   while(n<9.0){
   xn=k*xnm1;
   printf("%d\n", xn);
   n++;
   xnm1=xn;
   }
   totalSum =pow(k,n)-x1
   printf("Sum of geometric series is %d\n", totalSum);
   return 0;
}
 
